{
  "compilerOptions": {
    "target": "ES2020", // ~node10
    "module": "CommonJS",
    "moduleResolution":"node",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2020"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
